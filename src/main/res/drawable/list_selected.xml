<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <gradient 
    		    android:startColor="@color/VerySoftBlueStart"
    		    android:endColor="@color/VerySoftBlueEnd"
    		    android:angle="-90"/>
            <stroke
                android:width="3px"
                android:color="@color/SlightlyDesaturatedBlue" />
            <corners
                android:radius="10dp" />
            <padding
			    android:left="20dp"
			    android:top="10dp"
			    android:right="20dp"
			    android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>